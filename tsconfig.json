{
  "compilerOptions": {
    "module": "commonjs",
    "incremental": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "lib": ["es2020", "DOM"],
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  },
  "include": ["src"],
  "files": [".d.ts"]
}
